%div.comment{ :id => "comment-#{comment.id}" }
      %hr
      = link_to "×", comment_path(comment), :method => :delete, :remote => true, :confirm => "Удалить этот комментарий?", :disable_with => "×", :class => 'close'
      %h4
      = comment.user.name
      %small= comment.updated_at
      %p= comment.body