<h1 id="section2">Блог Алексея</h1>
          <p>Здесь вы можете читать записи о железе, например sim-900, STM-32 и т.д.
</p>

<div class="col-sm-12">
      
<% if @posts.empty? %>
                
            <h3 align="center" class="breadcrumb block-min">Нет записей</h3>
                
<% else %>
            
            <h3 align="center" class="breadcrumb block-min">Недавние записи</h3>
            
   </div>
   
<% @posts.each do |post| %>


<div class="panel panel-default">
                   <div class="panel-heading"><a href="#" class="pull-right"><%= time_ago_in_words post.created_at %> назад</a>
                   	<h4><%= link_to post.title, post %></h4></div>
                    <div class="panel-body">

                    	<% if post.category_id==(-1) %>
                            <p>Без категории</p>
                            <% else %>
                            <p>
                            <%= link_to post.category.title+" категория", post.category, :class => ""%> 
                            </p>
                      <% end %>

                      <div class="clearfix"></div>
                      <hr>
											<%= post.body.html_safe %>
											<hr>

											<% if admin? %>
                        <div class="btn-group pull-right">
											  <%= link_to "Редактировать", edit_post_path(post), :class => "btn btn-success btn-sm"%>
											  <%= link_to "Удалить", post, :method => :delete, :confirm => "Вы уверены?", :class => "btn btn-danger btn-sm"%>
											</div>
												<% end %> 
                      <div class="panel-footer"> 
       									<%= link_to "Читать запись", post, :class => "btn btn-primary" %>
                        <%if post.comment_threads.size>0%>
                        <%= link_to "Комментарии ("+post.comment_threads.size.to_s+")", post_path(post, :anchor => "comments"), :class => "btn btn-info" %>
                        <% else %>
                        <%= link_to "Написать комментарий", post_path(post, :anchor => "comments"), :class => "btn btn-info" %>
                        <%end%>                 
                      </div>  
                      
                    </div>
       
</div> 
            <% end %>
            <hr />
            <div style="margin-left:15"><%= will_paginate @posts %></div>

           <div class="col-sm-12 text-center">
                        <ul class="pagination center-block" style="display:inline-block;">
                          <li><a href="#">«</a></li>
                          <li><a href="#">1</a></li>
                          <li><a href="#">2</a></li>
                          <li><a href="#">3</a></li>
                          <li><a href="#">4</a></li>
                          <li><a href="#">5</a></li>
                          <li><a href="#">»</a></li>
                        </ul>
                      </div>
          <hr />

<% end %>