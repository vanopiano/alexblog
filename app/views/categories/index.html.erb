<div align="center">
<div class="block w100">

<% @categories.each do |category| %>
  <div class="block dark-100 m05" align="left">
    <%= category.title %>
    <%= link_to 'Открыть', category, :class => "btn btn-info btn-sm" %>
    <%= link_to 'Переименовать', edit_category_path(category), :class => "btn btn-success btn-sm" %>
    <%= link_to "Удалить", category, :method => :delete, :confirm => "Вы уверены?", :class => "btn btn-danger btn-sm"%>

    <ul>
    <% category.posts.each do |post| %>
    <li><%= link_to post.title, post %></li>
    <% end %>
    </ul>
    
</div>
<% end %>
<div class="block w100 m05">
<%= link_to 'Новая категория', new_category_path, :class => "btn btn-primary w100" %>
</div>
</div>
</div>