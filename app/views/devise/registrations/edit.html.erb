<div class="col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">  
        
        <div class="block w100" align="center">
    
<%= simple_form_for(resource, :as => resource_name,
                              :url => registration_path(resource_name),
                              :html => { :class => "form-horizontal",:method => :put }) do |f| %>
<fieldset>
<legend>Изменить свои данные </legend>
  <div class="form-inputs">
  <div class="form-group">
  <%= f.text_field :name,:required => true, :autofocus => true, :class => "form-control input-md", :placeholder => "Отображаемое имя"  , :style => " width:96%"  %>
  <%= f.email_field :email,:required => true, :placeholder => "E-mail", :style => " width:96%" ,:class => "form-control input-md" %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <%= f.text_field :user_pic,:required => false, :class => "form-control input-md", :placeholder => "URL аватара"  , :style => " width:96%"  %>
    </div>
    <div class="form-group">
    Если хотите изменить пароль, то введите:
  <%= f.password_field :password, :required => false,:class => "form-control input-md", :placeholder => "Новый пароль (минимум 5 символов)", :style => " width:96%"  %>
  <%= f.password_field :password_confirmation, :required => false, :class => "form-control input-md",:placeholder => "Повторите новый пароль", :style => " width:96%"  %>
  <%= f.password_field :current_password, :class => "form-control input-md", :placeholder => "Текущий пароль (для применения изменений)", :style => " width:96%"  %>
  </div>
  </div>

  
  <div class="form-actions" align = "center">
    <%= f.button :submit, "Сохранить", :class => "btn btn-success", :style => " width:49%" %>
    <%= link_to "Вернуться", :back, :class => "btn btn-warning" , :style => " width:49%" %>
    </div>

<% end %>
</fieldset> 

<%= link_to "Удалить свой аккаунт", registration_path(resource_name), :class => "btn btn-danger", :data => { :confirm => "Вы уверены?" }, :method => :delete  , :style => " width:100%" %>
  </div>
</div>
