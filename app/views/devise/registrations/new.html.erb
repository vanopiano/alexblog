<div class="col-md-12"> 
  
        <div class="block w100 m1" align="center">
    
<%= simple_form_for(resource, :as => resource_name,
                              :url => registration_path(resource_name),
                              :html => { :class => "form-horizontal"}) do |f| %>
<fieldset>
<legend>Регистрация</legend>
  <div class="form-inputs">
  <div class="form-group">
  <%= f.text_field :name,:required => true, :autofocus => true, :class => "form-control input-md", :placeholder => "Отображаемое имя"  , :style => " width:96%"  %>
  <%= f.email_field :email,:required => true, :placeholder => "E-mail", :style => " width:96%" ,:class => "form-control input-md" %>
  <%= f.password_field :password, :required => false,:class => "form-control input-md", :placeholder => "Пароль (минимум 5 символов)", :style => " width:96%"  %>
  <%= f.password_field :password_confirmation, :required => false, :class => "form-control input-md",:placeholder => "Повторите новый пароль", :style => " width:96%"  %>
  </div>
  </div>
  <div class="form-actions " align = "center">
    <%= f.button :submit, "Зарегистрироваться", :class => "btn btn-success", :style => " width:100%" %>
    <h4>ИЛИ</h4>
     <%= link_to "Войти с помощью Google", user_omniauth_authorize_path(:google_oauth2), :class => "btn btn-danger" , :style => " width:100%" %>
    </div>
<% end %>
</fieldset>

<%  if resource.errors.size>0 %>
<%   resource.errors.full_messages.each do |e|%>
  <% if !(e.to_s.include? ",") %>
  <% e=e.gsub("Password", "Пароль")%>
  <% end %>  
<% if e.to_s.include? "Email" %>
  <% e="Пользователь с таким "+e %>
<%end%>
<% if e.to_s.include? "не совпадает" %>
  <% e="Введенные пароли не совпадают" %>
<%end%>
<div class="alert alert-danger alert-dismissable m05">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <strong>Внимание!</strong> <%= e %>
</div>


<% end %>
<% end %>

</div>
</div>